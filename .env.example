# Duke Consultancy Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE CONFIGURATION (MySQL)
# ============================================
# Your existing MySQL database at 51.68.193.188
DB_HOST=51.68.193.188
DB_USER=hazzains_duke_admin
DB_PASSWORD=your-database-password-here
DB_NAME=hazzains_duke_admin
DB_PORT=3306

# ============================================
# SERVER CONFIGURATION
# ============================================
# Environment: development or production
NODE_ENV=production

# Server port (use 5000 for Replit, 3000 for cPanel, or your custom port)
PORT=5000

# Session secret (generate a random string for security)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-random-session-secret-here

# ============================================
# DOMAIN CONFIGURATION
# ============================================
# Your website domain (used for links in emails, etc.)
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://yourdomain.com

# For development on Replit
# FRONTEND_URL=https://your-repl-name.replit.app
# BACKEND_URL=https://your-repl-name.replit.app

# ============================================
# EMAIL CONFIGURATION (Optional - can be configured in Admin Panel)
# ============================================
# Note: Email settings are primarily configured through the Admin Panel
# Email Settings section. These environment variables are fallback options.

# SMTP Server settings (from your cPanel email)
EMAIL_HOST=mail.yourdomain.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=admin@yourdomain.com
EMAIL_PASSWORD=your-email-password-here
EMAIL_FROM=admin@yourdomain.com

# ============================================
# WEBHOOK SECRET (for Email Inbox feature)
# ============================================
# Secret key for webhook authentication
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
WEBHOOK_SECRET=your-webhook-secret-here

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
# Maximum file size for uploads (in bytes)
# Default: 10MB
MAX_FILE_SIZE=10485760

# Allowed file extensions for document uploads
ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.jpg,.jpeg,.png

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Enable CORS (set to true in development, false in production)
ENABLE_CORS=false

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=https://yourdomain.com

# ============================================
# NOTES
# ============================================
# 1. NEVER commit the actual .env file to version control
# 2. Keep .env file secure and backed up separately
# 3. Use different secrets for development and production
# 4. Generate strong random strings for SESSION_SECRET and WEBHOOK_SECRET
# 5. Email settings can be configured in Admin Panel > Email Settings
